<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>PSG</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>RegisterPlayer</display-name>
		<servlet-name>RegisterPlayer</servlet-name>
		<servlet-class>welcome.RegisterPlayer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterPlayer</servlet-name>
		<url-pattern>/welcome/RegisterPlayer</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>PlayerLoginServlet</display-name>
		<servlet-name>PlayerLoginServlet</servlet-name>
		<servlet-class>welcome.PlayerLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlayerLoginServlet</servlet-name>
		<url-pattern>/welcome/PlayerLoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>PlayerServlet</display-name>
		<servlet-name>PlayerServlet</servlet-name>
		<servlet-class>football.PlayerServlet</servlet-class>
		<init-param>
			<param-name>club</param-name>
			<param-value>PSG</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlayerServlet</servlet-name>
		<url-pattern>/football/PlayerServlet</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>uefa</param-name>
		<param-value>Champion</param-value>
	</context-param>
	<context-param>
		<param-name>driver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/java16</param-value>
	</context-param>
	<context-param>
		<param-name>username</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>password</param-name>
		<param-value>root</param-value>
	</context-param>

</web-app>
